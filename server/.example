// console.log("--- Similarity Search Results ---", retrievedDocs);

const llm = new ChatGoogleGenerativeAI({
    model: "gemini-1.5-flash-latest", 
});

const checkpointer=new MemorySaver();

const agent=createReactAgent({
    llm, 
    tools: [retrievalTool], 
